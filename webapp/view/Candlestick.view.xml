<mvc:View xmlns:mvc="sap.ui.core.mvc"
    xmlns:control="fokin.chart.control"
    xmlns="sap.m">
    <VBox>
        <items>
            <control:Chart
                axisBottomTicks="{candles>/}"
                padding="60"
                width="1000"
                height="500"
                min="0"
                max="5"
                xScaleBandPadding="0.5"> 
                <control:series>
                    <control:CandlestickSeries candlesticks="{candles>/}">
                        <control:candlesticks>
                            <control:Candlestick x="{candles>time}" open="{candles>open}" high="{candles>high}" low="{candles>low}" close="{candles>close}"/>
                        </control:candlesticks>
                    </control:CandlestickSeries>
                </control:series>
                <control:axisBottomTicks>
                    <control:AxisTick value="{candles>time}"/>
                </control:axisBottomTicks>
            </control:Chart>
            <control:Chart
                axisBottomTicks="{candles>/}"
                padding="60"
                width="1000"
                height="100"
                min="0"
                max="5"> 
                <control:series>
                    <control:LineSeries points="{candles>/}">
                        <control:points>
                            <control:Point x="{candles>time}" y="{candles>close}"/>
                        </control:points>
                    </control:LineSeries>
                </control:series>
                <control:axisBottomTicks>
                    <control:AxisTick value="{candles>time}"/>
                </control:axisBottomTicks>
            </control:Chart>
        </items>
    </VBox>
</mvc:View>
