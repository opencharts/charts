<mvc:View xmlns:mvc="sap.ui.core.mvc"
    xmlns:control="fokin.chart.control"
    xmlns="sap.m">
    <control:Chart
        axisBottomTicks="{/}"
        padding="60"
        width="1000"
        height="500"
        min="0"
        max="5"
        xScaleBandPadding="0.5"> 
        <control:series>
            <control:BarSeries bars="{/}">
                <control:bars>
                    <control:Bar x="{text}" y="{value}"/>
                </control:bars>
            </control:BarSeries>
        </control:series>
        <control:axisBottomTicks>
            <control:AxisTick value="{text}"/>
        </control:axisBottomTicks>
    </control:Chart>
</mvc:View>
